<% @comics.in_groups_of(4, false).each_with_index do |group, index| %>
  <div class="row">
    <% group.each do |comic| %>
      <div class='col-lg-3 test'>
        <!-- SHOW THE IMAGE OF THE COMIC BOOK AND MAKE THE ENTIRE IMAGE A LINK.
             ATTACH THE CLASS OF 'image-responsive' TO THIS LINK -->
             <!--the img-responsive class makes it so the image can only be as wide as the div that contains it-->
             <%= link_to image_tag(comic.image, :class=>'img-responsive'), "/show/#{comic.id}" %>
      </div>
    <% end %>
  </div>
<% end %>
